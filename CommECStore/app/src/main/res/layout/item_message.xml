<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_item_h"
        android:paddingLeft="@dimen/message_item_icon_left_space"
        android:paddingRight="@dimen/message_item_right_space"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_commentator_icon"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_commentator"
                    android:layout_width="@dimen/message_item_subject_w"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Subject"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/message_item_subject_sp"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_msg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2016/04/23 10:32"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_a3a3a3"
                    android:textSize="@dimen/message_item_txt_sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_msg_desc"
                android:layout_width="@dimen/message_item_desc_w"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_marginTop="@dimen/message_item_middle_space"
                android:text="description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_a3a3a3"
                android:textSize="@dimen/message_item_txt_sp"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_commentator_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/message_item_icon_right_space"
            android:src="@mipmap/img_icon_invoice"/>
    </RelativeLayout>

</LinearLayout>