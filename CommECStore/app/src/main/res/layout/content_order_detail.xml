<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e3e3e3">

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_block_h"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/iv_icon_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/order_detail_receive_icon_left_space"
                    android:layout_marginRight="@dimen/order_detail_receive_icon_right_space"
                    android:background="@mipmap/img_location" />

                <LinearLayout
                    android:id="@+id/ll_receiver_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/order_detail_receive_txt_right_space"
                    android:layout_toRightOf="@+id/iv_icon_location"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_detail_receiver"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_191919"
                                android:textSize="@dimen/order_detail_receive_size" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_receiver_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Phone"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_191919"
                            android:textSize="@dimen/order_detail_receive_size" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_receiver_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/order_detail_receive_txt_tb_space"
                            android:text="@string/order_detail_address"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_191919"
                            android:textSize="@dimen/order_detail_receive_size" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_block_h"
                android:layout_marginTop="@dimen/order_detail_block_space_bottom"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/iv_icon_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/order_detail_shop_icon_left_space"
                    android:layout_marginRight="@dimen/order_detail_shop_icon_right_space"
                    android:background="@mipmap/img_shop_big" />

                <LinearLayout
                    android:id="@+id/ll_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/order_detail_shop_txt_right_space"
                    android:layout_toRightOf="@+id/iv_icon_shop"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shop name"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_191919"
                                android:textSize="@dimen/order_detail_shop_name_size" />

                            <ImageButton
                                android:id="@+id/ibtn_go_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/order_detail_shop_arrow_left_space"
                                android:background="@mipmap/bn_go_gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_trade_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Status"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_ec6c00"
                            android:textSize="@dimen/order_detail_shop_name_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/order_detail_shop_txt_tb_space"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_shop_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/order_detail_shop_phone"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_4a4a4a"
                            android:textSize="@dimen/order_detail_shop_phone_size" />

                        <TextView
                            android:id="@+id/tv_shop_community"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/order_detail_shop_community"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_4a4a4a"
                            android:textSize="@dimen/order_detail_shop_community_size" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <ListView
                android:id="@+id/lv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/order_detail_block_space_bottom"
                android:layout_weight="1"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/ll_order_sumary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_buyer_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/order_detail_buyer_msg_top_space"
                    android:paddingLeft="@dimen/order_detail_buyer_msg_left_space"
                    android:paddingRight="@dimen/order_detail_buyer_msg_right_space"
                    android:text="@string/order_detail_message"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_message_size" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_buyer_line_tb_space"
                    android:layout_marginTop="@dimen/order_detail_buyer_line_tb_space"
                    android:background="@mipmap/img_line_1000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/order_detail_amount_right_space">

                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_total_amount"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_191919"
                        android:textSize="@dimen/order_detail_message_size" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_detail_total_price_left_space"
                        android:text="@string/order_total"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/order_detail_message_size" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_total_num"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_ec6c00"
                        android:textSize="@dimen/order_detail_message_size" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_del_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/order_detail_del_bottom_space"
                    android:layout_marginRight="@dimen/order_detail_del_right_space"
                    android:layout_marginTop="@dimen/order_detail_del_top_space"
                    android:background="@mipmap/btn_small_gray"
                    android:text="@string/order_detail_btn_del"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_message_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f2f2f2"
                android:orientation="vertical"
                android:paddingLeft="@dimen/order_detail_order_left_space"
                android:paddingTop="@dimen/order_detail_order_space">

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_id"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

                <TextView
                    android:id="@+id/tv_info_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_payment"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

                <TextView
                    android:id="@+id/tv_info_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_logistics"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

                <TextView
                    android:id="@+id/tv_info_logistics_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_logistics_id"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

                <TextView
                    android:id="@+id/tv_info_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_order_time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

                <TextView
                    android:id="@+id/tv_info_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_pay_time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

                <TextView
                    android:id="@+id/tv_info_sent_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_detail_order_space"
                    android:text="@string/order_detail_info_sent_time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/order_detail_order_info_size" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>