<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/common_ddou_icon_bottom_space"
                android:layout_marginTop="@dimen/common_ddou_icon_top_space"
                android:src="@mipmap/img_logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_logo"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_signin_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_logo"
                    android:background="@mipmap/img_phone_squre"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/signin_et_icon_bottom_space"
                        android:layout_marginLeft="@dimen/signin_et_icon_left_space"
                        android:layout_marginRight="@dimen/signin_et_icon_right_space"
                        android:layout_marginTop="@dimen/signin_et_icon_top_space"
                        android:src="@mipmap/img_account_icon"/>

                    <EditText
                        android:id="@+id/et_signin_account"
                        android:layout_width="@dimen/signin_et_w"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="11"
                        android:hint="@string/signin_et_enter_cellphone"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/color_9b9b9b"
                        android:textSize="@dimen/signin_et_sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_signin_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_signin_account"
                    android:background="@mipmap/img_password_squre"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/signin_et_icon_bottom_space"
                        android:layout_marginLeft="@dimen/signin_et_icon_left_space"
                        android:layout_marginRight="@dimen/signin_et_icon_right_space"
                        android:layout_marginTop="@dimen/signin_et_icon_top_space"
                        android:src="@mipmap/img_password_icon"/>

                    <EditText
                        android:id="@+id/et_signin_pwd"
                        android:layout_width="@dimen/signin_et_w"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/signin_et_enter_pwd"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/color_9b9b9b"
                        android:textSize="@dimen/signin_et_sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_signin_forgot_pwd"
                    android:layout_width="@dimen/signin_txt_forget_pwd_w"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_signin_pwd"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_signin_forgot_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/signin_tv_forgot_pwd"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/signin_txt_forget_pwd_sp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_signin_forgot_pwd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/signin_btn_signin_top_space"
                    android:background="@mipmap/btn_orange"
                    android:text="@string/signin_btn_signin"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/signin_btn_sp"/>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>