<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10.3dp"
        android:paddingBottom="10.3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_billing_item"
            android:background="@mipmap/tab_btn_listprocessing_select"
            android:layout_marginLeft="19.7dp"
            android:layout_marginRight="8.3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_billing_item"
            android:textSize="20sp"
            android:textColor="@color/color_ec6c00"/>
    </LinearLayout>
</LinearLayout>