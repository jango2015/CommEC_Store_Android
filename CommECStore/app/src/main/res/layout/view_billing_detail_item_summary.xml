<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/shop_billing_detail_item_padding_top_bottom"
        android:paddingLeft="@dimen/shop_billing_detail_item_padding_left_right"
        android:paddingRight="@dimen/shop_billing_detail_item_padding_left_right"
        android:paddingTop="@dimen/shop_billing_detail_item_padding_top_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_billing_detail_order_payment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/shop_billing_detail_period_summary_item_title_sp"/>

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/shop_billing_detail_period_summary_item_title_sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/shop_billing_detail_item_title_top_bottom_edge"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_billing_detail_system_commission"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/shop_billing_detail_period_summary_item_title_sp"/>

            <TextView
                android:id="@+id/tv_system_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_7ed321"
                android:textSize="@dimen/shop_billing_detail_period_summary_item_title_sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/shop_billing_detail_item_title_top_bottom_edge"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_billing_detail_platform_commission"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/shop_billing_detail_period_summary_item_title_sp"/>

            <TextView
                android:id="@+id/tv_platform_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_7ed321"
                android:textSize="@dimen/shop_billing_detail_period_summary_item_title_sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
