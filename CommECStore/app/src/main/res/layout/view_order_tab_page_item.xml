<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_shop_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_buyer_h"
        android:layout_marginTop="@dimen/order_detail_block_space_bottom"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/order_buyer_info_left_space"
            android:layout_marginRight="@dimen/order_buyer_info_right_space"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_buyer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buyer"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_191919"
                        android:textSize="@dimen/order_buyer_name_size" />

                    <TextView
                        android:id="@+id/tv_buyer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/order_buyer_phone_left_space"
                        android:text="phone"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/order_buyer_phone_size" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_buyer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_buyer"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/order_buyer_address_size" />

                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_trade_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Status"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_ec6c00"
                        android:textSize="@dimen/order_order_status_size" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_order_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_order_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_total_tr_space"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/order_total_tr_space">

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_total_amount"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_191919"
            android:textSize="@dimen/order_total_size" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/order_total_amount_left_space"
            android:text="@string/order_total"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_191919"
            android:textSize="@dimen/order_total_size" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_total_num"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_ec6c00"
            android:textSize="@dimen/order_total_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/order_line_bottom_space"
        android:layout_marginTop="@dimen/order_line_top_space"
        android:background="@mipmap/img_line_1000" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/order_btn_bottom_space"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/order_btn_right_space"
            android:background="@mipmap/btn_small_gray"
            android:text="btn1"
            android:textColor="@color/color_191919"
            android:textSize="@dimen/order_total_size" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/order_btn_right_space"
            android:background="@mipmap/btn_small_gray"
            android:text="btn2"
            android:textColor="@color/color_191919"
            android:textSize="@dimen/order_total_size" />
    </LinearLayout>

</LinearLayout>