<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_d8d8d8"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@mipmap/img_navi_background">

        <ImageButton
            android:id="@+id/ibtn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/common_ddou_return_left_space"
            android:layout_marginTop="@dimen/common_ddou_return_top_space"
            android:background="@drawable/selector_btn_return_white"
            android:contentDescription="return"/>

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="@string/shop_billing_summary_header_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_txt_sp"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/shop_billing_summary_price_bottom"
                android:layout_marginTop="@dimen/shop_billing_summary_price_top"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_money"/>

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shop_billing_summary_price_left"
                    android:text="Price"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/shop_billing_summary_price_sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_frame_totallist"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/shop_billing_summary_centre_block_padding_left"
                android:paddingRight="@dimen/shop_billing_summary_centre_block_padding_left">

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_settlement_date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_line_850"/>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_shop_id"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_shop_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_line_850"/>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_shop_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/line_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_line_850"/>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_community_manager"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_community_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/line_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_line_850"/>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_platform_manage"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_platform_manage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/line_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_line_850"/>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_shop_receivables"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_top10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/shop_billing_summary_centre_block_item_top"
                        android:text="@string/shop_billing_summary_payment"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_top10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/shop_billing_summary_centre_block_item_top"
                        android:text="@string/shop_billing_summary_system_commission"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_system_commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_7ed321"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_top10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/shop_billing_summary_centre_block_item_top"
                        android:text="@string/shop_billing_summary_platform_commission"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_platform_commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_7ed321"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/shop_billing_summary_centre_block_item_w"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shop_billing_summary_centre_block_item_top83"
                    android:layout_marginTop="@dimen/shop_billing_summary_centre_block_item_subtotal_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/shop_billing_summary_shop_subtotal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>

                    <TextView
                        android:id="@+id/tv_sub_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv10"
                        android:text="@string/shop_billing_summary_shop_subtotal_price"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_ec6c00"
                        android:textSize="@dimen/shop_billing_summary_centre_block_sp"/>
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_billing_summary_bottom_btn_detail_top"
                android:background="@mipmap/btn_orange_border"
                android:text="@string/shop_billing_summary_btn_detail"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/shop_billing_summary_bottom_btn_sp"/>

            <Button
                android:id="@+id/btn_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/shop_billing_summary_bottom_btn_other_bottom"
                android:layout_marginTop="@dimen/shop_billing_summary_bottom_btn_other_top"
                android:background="@mipmap/btn_orange_border"
                android:text="@string/shop_billing_summary_btn_other"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/shop_billing_summary_bottom_btn_sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>