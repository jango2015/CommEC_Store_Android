<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/goods_info_goods_content_padding"
        android:paddingRight="@dimen/goods_info_goods_content_padding">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="@dimen/goods_info_goods_photo_wh"
            android:layout_height="@dimen/goods_info_goods_photo_wh"
            android:layout_marginBottom="@dimen/goods_info_goods_photo_space"
            android:layout_marginRight="@dimen/goods_info_goods_photo_space"
            android:layout_marginTop="@dimen/goods_info_goods_photo_space" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/goods_info_goods_name_top"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_4a4a4a"
            android:textSize="@dimen/goods_info_goods_name_sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_goods_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>